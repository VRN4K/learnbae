<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Названия стиля текста формируется по шаблону:
  ШрифтНачертание.Цвет.Размер, например, FactorAMedium.Accent.20.

  Шрифты:
      - Kopenhagen
      - Mariupol
  Начертания:
      - Regular.
  Цвета:
      - PrimaryText;
      - SecondaryText;
  Размеры:
      -

  Можно брать не конечные стили исключая последующие, например: FactorAMedium, FactorAMedium.Accent;
  -->

    <!--______________________________TYPEFACE_____________________________________-->
    <!--______________________________Kopenhagen___________________________________-->

    <style name="KopenhagenMedium">
        <item name="android:fontFamily">@font/kopenhagen</item>
    </style>

    <!--______________________________Mariupol_____________________________________-->

    <style name="MariupolRegular">
        <item name="android:fontFamily">@font/mariupol_regular</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="MariupolMedium">
        <item name="android:fontFamily">@font/mariupol_medium</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

