<?xml version="1.0" encoding="utf-8"?>
<com.learnbae.my.presentation.common.animator.LoadingViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loading_animator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:visible_child="true">

    <LinearLayout
        android:id="@+id/screenContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                style="@style/MariupolMedium.Primary.20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="@string/profile_account_toolbar_text" />
        </Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="20dp"
                android:src="@drawable/profile_avatar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/userFullName"
                    style="@style/MariupolMedium.Primary.17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    tools:text="Капитанова Вероничка" />

                <TextView
                    android:id="@+id/userEmail"
                    style="@style/MariupolRegular.Primary.17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    tools:text="brigmore.w@gmail.com" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/updateProfileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="@color/black"
                    android:paddingHorizontal="25dp"
                    android:text="@string/profile_account_change_info_button"
                    android:textAppearance="@style/MariupolMedium.PrimaryLight.17"
                    android:textColor="@color/primary_light_text" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <LinearLayout style="@style/ProfileUserInfoBlock">
                    <TextView
                        style="@style/ProfileUserInfoTextViewTitle"
                        android:text="@string/profile_account_words_count"
                        android:textAppearance="@style/MariupolRegular.Secondary.15" />

                    <TextView
                        android:id="@+id/wordsCount"
                        style="@style/ProfileUserInfoTextViewValue"
                        android:textAppearance="@style/MariupolMedium.Primary.20"
                        tools:text="6" />
                </LinearLayout>

                <LinearLayout style="@style/ProfileUserInfoBlock">
                    <TextView
                        style="@style/ProfileUserInfoTextViewTitle"
                        android:text="@string/profile_account_register_date"
                        android:textAppearance="@style/MariupolRegular.Secondary.15" />

                    <TextView
                        android:id="@+id/userSingUpDate"
                        style="@style/ProfileUserInfoTextViewValue"
                        android:textAppearance="@style/MariupolMedium.Primary.20"
                        tools:text="21 мая 2022" />
                </LinearLayout>

                <LinearLayout style="@style/ProfileUserInfoBlock">
                    <TextView
                        style="@style/ProfileUserInfoTextViewTitle"
                        android:text="@string/profile_account_english_level"
                        android:textAppearance="@style/MariupolRegular.Secondary.15" />

                    <TextView
                        android:id="@+id/englishLevelValue"
                        style="@style/ProfileUserInfoTextViewValue"
                        android:textAppearance="@style/MariupolMedium.Primary.20"
                        tools:text="A1" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:alpha="0.3"
            android:background="@drawable/line" />

        <Button
            style="@style/ProfileButton"
            android:drawableLeft="@drawable/ic_notification_svgrepo_com"
            android:text="@string/profile_account_word_of_a_day_push" />

        <Button
            android:id="@+id/synchronizeWordsButton"
            style="@style/ProfileButton"
            android:drawableLeft="@drawable/ic_refresh_2_svgrepo_com"
            android:text="@string/profile_account_words_remote_button" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:alpha="0.3"
            android:background="@drawable/line" />

        <Button
            android:id="@+id/changePasswordButton"
            style="@style/ProfileButton"
            android:drawableLeft="@drawable/ic_lock_svgrepo_com"
            android:text="@string/profile_account_change_password_button" />

        <Button
            android:id="@+id/logoutButton"
            style="@style/ProfileButton"
            android:drawableLeft="@drawable/ic_logout_svgrepo_com"
            android:text="@string/profile_account_logout_button" />
    </LinearLayout>
</com.learnbae.my.presentation.common.animator.LoadingViewAnimator>